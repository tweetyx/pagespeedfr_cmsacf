<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="hyva_acf" resource="default" engine="innodb" comment="hyva acf">
        <column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="acftype" nullable="false" length="25" comment="type text image etc"/>
        <column xsi:type="varchar" name="content" nullable="false" length="255" comment="content"/>
        <column xsi:type="varchar" name="content_secondary" nullable="false" length="255" comment="content secondary field"/>
        <column xsi:type="varchar" name="category" nullable="false" length="255" comment="category"/>
        <column xsi:type="boolean" name="active" comment="active" default="1" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>